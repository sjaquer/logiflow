rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      // Check if the user is an admin by reading their role from the 'users' collection
      return get(/databases/$(database)/documents/users/$(request.auth.token.email)).data.rol == 'ADMIN';
    }

    match /users/{userId} {
      // Allow any authenticated user to read user data (e.g., for assigning tasks, showing names)
      allow read: if request.auth != null;
      // Allow ONLY admins to create, update, or delete user documents
      allow write: if request.auth != null && isAdmin();
    }

    match /inventory/{itemId} {
      // Allow any authenticated user to read inventory data
      allow read: if request.auth != null;
      // Allow only admins or users with inventory permission to write
      allow write: if request.auth != null && (isAdmin() || get(/databases/$(database)/documents/users/$(request.auth.token.email)).data.permisos.puede_gestionar_inventario == true);
    }
    
    match /orders/{orderId} {
       // Allow any authenticated user to read and write to orders
       // More specific rules can be added later (e.g., only assigned user can edit)
      allow read, write: if request.auth != null;
    }
  }
}
