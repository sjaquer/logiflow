rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Permite la lectura de usuarios, inventario y pedidos a cualquier usuario que haya iniciado sesi칩n.
    match /users/{userId} {
      allow read: if request.auth != null;
      // Solo los administradores pueden modificar usuarios (ejemplo a futuro)
      allow write: if false; 
    }

    match /inventory/{itemId} {
      allow read: if request.auth != null;
       // Solo los administradores o roles con permiso pueden modificar el inventario (ejemplo a futuro)
      allow write: if false;
    }
    
    match /orders/{orderId} {
      allow read: if request.auth != null;
      // La l칩gica de escritura de pedidos ser치 m치s compleja (ej. solo el asignado puede cambiar estado)
      allow write: if request.auth != null; // Permitimos la escritura para que los operadores puedan arrastrar tarjetas
    }
    
    // Regla general para cualquier otro documento: denegar por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
